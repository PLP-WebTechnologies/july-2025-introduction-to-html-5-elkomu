/* ==============================
   GALLERY ‚Äî CSS Grid
   ============================== */
.gallery {
  display: grid;
  gap: var(--gap);
  /* Default: 1 column on very small screens */
  grid-template-columns: 1fr;
  padding: 2rem 0;
}

.card {
  background: #fff;
  border-radius: var(--radius);
  overflow: hidden;
  box-shadow: var(--shadow);
  display: flex;
  flex-direction: column;
}

